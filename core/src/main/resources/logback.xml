<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %-5level %logger{0}::%method:%line: %msg%n</pattern>
            <outputPatternAsHeader>true</outputPatternAsHeader>
        </encoder>
    </appender>

    <logger name="com.jpmorgan.cib.coreeng.ste.java_lint_assert" level="debug" additivity="false">
        <appender-ref ref="stdout" />
    </logger>

    <root level="debug">
        <appender-ref ref="stdout" />
    </root>

</configuration>